%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{:type => "button", "data-toggle" => "collapse", "data-target" => "#navbar-ex-collapse", "aria-expanded"=>"false"}
        %span.sr-only Toggle Navigation
        - 1.upto(3) do |i|
          %span.icon-bar
      %a(class="navbar-brand" href="/")
        .span
          %img( src="/attachments/tslogo.jpg" width=23 height=23 alt='ts logo')
          %h5
            %strong
              = @heading
    .navbar-collapse.collapse(id="navbar-ex-collapse")    
      - display_menu(@menu_items, :class => "nav nav-bordered h4", :levels => 1)
      -langs=['en','ba','tet']
      -langs.each do |lang|
        .col-xs-1.pull-right
          %form{ :action => "/lang/#{lang}", 'method' => 'post'} 
            %button(type="submit" class="btn btn-link")
              %img(src="/attachments/flags/#{lang}.png" height=20 width=40)
        .col-xs-1.pull-right



